<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0"><i class="bi bi-database-add"></i> Neue Datenbank erstellen</h4>
            </div>
            <div class="card-body">
                <form method="POST" action="/databases">
                    <div class="mb-3">
                        <label for="name" class="form-label">Datenbankname</label>
                        <input type="text" class="form-control" id="name" name="name"
                               pattern="[a-z0-9_]+" required
                               placeholder="meine_datenbank">
                        <div class="form-text">Nur Kleinbuchstaben, Zahlen und Unterstriche erlaubt</div>
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <strong>Hinweis:</strong> Ein Datenbank-Benutzer wird automatisch erstellt:
                        <br>
                        <code><%= user.system_username %>_&lt;datenbankname&gt;</code>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-plus-lg"></i> Datenbank erstellen
                        </button>
                        <a href="/databases" class="btn btn-outline-secondary">
                            <i class="bi bi-x-lg"></i> Abbrechen
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
