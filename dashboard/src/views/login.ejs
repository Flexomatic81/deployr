<div class="row justify-content-center min-vh-100 pt-5 mt-5">
    <div class="col-md-5 col-lg-4 col-xl-3">
        <div class="card d-elevated">
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <img src="/images/logo-dark.png" alt="Dployr" height="80" class="mb-3 logo-light">
                    <img src="/images/logo.png" alt="Dployr" height="80" class="mb-3 logo-dark">
                    <h4 class="mb-0"><%= t('auth:login.title') %></h4>
                </div>

                <form method="POST" action="/login">
                    <%- csrfInput %>
                    <div class="mb-3">
                        <label for="username" class="form-label"><%= t('common:labels.username') %></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <input type="text" class="form-control" id="username" name="username" required autofocus>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="password" class="form-label"><%= t('common:labels.password') %></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-box-arrow-in-right"></i> <%= t('auth:login.submit') %>
                    </button>
                </form>

                <div class="d-divider"></div>

                <div class="text-center">
                    <p class="text-muted small mb-1"><%= t('auth:login.noAccount') %></p>
                    <a href="/register" class="fw-medium"><%= t('auth:login.registerLink') %></a>
                </div>
            </div>
        </div>
    </div>
</div>
