<div class="row justify-content-center min-vh-100 pt-5 mt-5">
    <div class="col-md-5 col-lg-4 col-xl-3">
        <div class="card d-elevated">
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <i class="bi bi-key display-4 text-primary"></i>
                    <h4 class="mt-2 mb-1"><%= t('auth:forgotPassword.title') %></h4>
                    <p class="text-muted small"><%= t('auth:forgotPassword.subtitle') %></p>
                </div>

                <form method="POST" action="/forgot-password">
                    <%- csrfInput %>
                    <div class="mb-4">
                        <label for="email" class="form-label"><%= t('common:labels.email') %></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input type="email" class="form-control" id="email" name="email" required autofocus
                                   placeholder="<%= t('auth:forgotPassword.emailPlaceholder') %>">
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-send"></i> <%= t('auth:forgotPassword.submit') %>
                    </button>
                </form>

                <div class="d-divider"></div>

                <div class="text-center">
                    <a href="/login" class="fw-medium">
                        <i class="bi bi-arrow-left"></i> <%= t('auth:forgotPassword.backToLogin') %>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
