<div class="row justify-content-center min-vh-100 pt-5 mt-5">
    <div class="col-md-5 col-lg-4 col-xl-3">
        <div class="card d-elevated">
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <i class="bi bi-shield-lock display-4 text-primary"></i>
                    <h4 class="mt-2 mb-1"><%= t('auth:resetPassword.title') %></h4>
                    <p class="text-muted small"><%= t('auth:resetPassword.subtitle') %></p>
                </div>

                <form method="POST" action="/reset-password">
                    <%- csrfInput %>
                    <input type="hidden" name="token" value="<%= token %>">

                    <div class="mb-3">
                        <label for="password" class="form-label"><%= t('auth:resetPassword.newPassword') %></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input type="password" class="form-control" id="password" name="password"
                                   minlength="8" required autofocus>
                        </div>
                        <div class="form-text"><%= t('common:validation.minLength', { min: 8 }) %></div>
                    </div>

                    <div class="mb-4">
                        <label for="password_confirm" class="form-label"><%= t('auth:resetPassword.confirmPassword') %></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                            <input type="password" class="form-control" id="password_confirm" name="password_confirm"
                                   minlength="8" required>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-check-lg"></i> <%= t('auth:resetPassword.submit') %>
                    </button>
                </form>

                <div class="d-divider"></div>

                <div class="text-center">
                    <a href="/login" class="fw-medium">
                        <i class="bi bi-arrow-left"></i> <%= t('auth:forgotPassword.backToLogin') %>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
