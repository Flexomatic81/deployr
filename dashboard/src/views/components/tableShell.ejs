<!-- Table Shell Header: title (required), titleIcon, actions, showAllLink -->
<div class="d-table-shell-header">
    <h5 class="d-table-shell-title">
        <% if (typeof titleIcon !== 'undefined' && titleIcon) { %>
        <i class="bi <%= titleIcon %>"></i>
        <% } %>
        <%= title %>
    </h5>
    <div class="d-table-shell-actions">
        <% if (typeof actions !== 'undefined' && actions && actions.length > 0) { %>
            <% actions.forEach(action => { %>
            <a href="<%= action.href %>" class="btn btn-sm <%= action.class || 'btn-outline-primary' %>">
                <% if (action.icon) { %><i class="bi <%= action.icon %>"></i><% } %>
                <%= action.label %>
            </a>
            <% }) %>
        <% } %>
        <% if (typeof showAllLink !== 'undefined' && showAllLink) { %>
        <a href="<%= showAllLink.href %>" class="btn btn-sm btn-link-muted">
            <%= showAllLink.label %> <i class="bi bi-arrow-right"></i>
        </a>
        <% } %>
    </div>
</div>
